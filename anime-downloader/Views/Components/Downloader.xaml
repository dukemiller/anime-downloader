<UserControl x:Class="anime_downloader.Views.Components.Downloader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:anime_downloader.ViewModels.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance components:DownloaderViewModel}"
             d:DesignHeight="360"
             d:DesignWidth="680"
             mc:Ignorable="d">
    <TextBox HorizontalContentAlignment="Left"
             VerticalContentAlignment="Top"
             Background="#ECECEC"
             BorderThickness="0"
             FontFamily="Segoe UI Light"
             FontSize="20"
             IsReadOnly="True"
             Text="{Binding Text}"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto" />
</UserControl>