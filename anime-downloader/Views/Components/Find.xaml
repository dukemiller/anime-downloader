<UserControl x:Class="anime_downloader.Views.Components.Find"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:anime_downloader.ViewModels.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance components:FindViewModel}"
             mc:Ignorable="d">
    <UserControl.Background>
        <SolidColorBrush Opacity="0.7" Color="AliceBlue" />
    </UserControl.Background>
        <TextBox Name="Textbox"
                 Width="400"
                 Margin="5"
                 VerticalContentAlignment="Center"
                 FontSize="18"
                 IsVisibleChanged="UIElement_OnIsVisibleChanged"
                 Text="{Binding Text,
                                UpdateSourceTrigger=PropertyChanged}"
                 Visibility="{Binding Visible}">
            <TextBox.InputBindings>
                <KeyBinding Key="Escape" Command="{Binding ClearCommand}" />
            </TextBox.InputBindings>
        </TextBox>
</UserControl>