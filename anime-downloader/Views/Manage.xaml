<UserControl x:Class="anime_downloader.Views.Manage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:anime_downloader.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:ManageViewModel}"
             DataContext="{Binding Source={StaticResource Locator},
                              Path=Manage}"
             d:DesignHeight="360"
             d:DesignWidth="680"
             Background="White"
             mc:Ignorable="d">
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>
        <ContentPresenter Grid.Column="0" Content="{Binding Unwatched}" />
        <ContentPresenter Grid.Column="2" Content="{Binding Watched}" />
    </Grid>
</UserControl>